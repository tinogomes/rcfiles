#!/usr/bin/env sh

if [[ "$#" -lt 1 ]]; then
  echo "Usage: $(basename "$0") [language] <name>"
  echo
  echo "Available languages:"
  echo "* ruby | rb"
  echo "* macruby | macrb"
  echo "* python | py"
  echo "* perl | pl"
  echo "* sh (default)"
  exit 1
fi

lang=$1
filename=$2

if [[ -z "$filename" ]]; then
  filename=$lang
  lang="sh"
fi

if [[ -e "$filename" ]]; then
  echo "ERROR: "$filename" already exists."
  exit 1
fi

touch "$filename"
chmod u+x "$filename"

case "$lang" in
  ("ruby"|"rb")
    echo -ne "#!/usr/bin/env ruby\n\n" > "$filename"
  ;;
  ("macruby"|"macrb")
    echo -ne "#!/usr/bin/env macruby\n\n" > "$filename"
  ;;
  ("python"|"py")
    echo -ne "#!/usr/bin/env python\n\n" > "$filename"
  ;;
  ("perl"|"pl")
    echo -ne "#!/usr/bin/env perl\nuse strict;\nuse warnings;\n\n" > "$filename"
  ;;
  (*)
    echo -ne "#!/bin/sh\n\n" > "$filename"
  ;;
esac

vim $filename
