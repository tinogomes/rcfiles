[alias]
    br = branch
    bra = branch -a
    brd = !git checkout master && git branch | grep -v master | sed -e 's/^/git br -D/' | sh
    brr = branch -r
    ci = commit
    cim = commit -m
    ciam = commit -am
    co = checkout
    cob = checkout -b
    cp = cherry-pick
    dif = diff
    diffs = diff --staged
    diffw = diff --word-diff
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    llog = log --pretty='format:%Cgreen%h %Cred%ar %Creset-- %s (%an)' --max-count=20
    ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
    one = log --pretty=oneline --abbrev-commit -20 --decorate
    oneg = log --oneline --graph
    rb = rebase
    rba = rebase --abort
    rbc = rebase --continue
    rbs = rebase --skip
    rp = remote prune
    ru = remote update
    st = status
    sts = status -sb
    uncommit = reset HEAD^
    who = shortlog -s
    wip = !git add . --all && git commit -nm WIP

[color]
    branch = auto
    diff   = auto
    grep   = auto
    status = auto
    ui     = auto

[core]
    editor         = $EDITOR
    excludesfile   = $HOME/.gitignore_global
    attributesfile = $HOME/.gitattributes-global
    pager = less -F -X

[github]
    user = tinogomes

[help]
    autocorrect = 1
    format = web

[instaweb]
    httpd = webrick

[merge "bundlelock"]
    name   = bundle lock
    driver = "rm -f Gemfile.lock; bundle check"

[user]
    email = tinorj@gmail.com
    name = tinogomes

[push]
    default = current

[branch]
	autosetupmerge = true

[remote "origin"]
	prune = true
[diff]
	tool = diffmerge
[difftool "diffmerge"]
	cmd = /usr/local/bin/diffmerge \"$LOCAL\" \"$REMOTE\"
[merge]
	tool = diffmerge
[mergetool "diffmerge"]
	trustExitCode = true
	cmd = /usr/local/bin/diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
