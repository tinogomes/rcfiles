# Config
config windowHintsFontSize 100
config nudgePercentOf screenSize
config resizePercentOf screenSize
config windowHintsTopLeftX (windowSizeX/2)-(windowHintsWidth/2)
config windowHintsTopLeftY (windowSizeY/2)-(windowHintsHeight/2)

# General aliases
alias sox screenOriginX
alias soy screenOriginY
alias ssx screenSizeX
alias ssy screenSizeY

# Position aliases
alias centered ${sox}+${ssx}/8;${soy}+${ssy}/8 ${ssx}/8*6;${ssy}/8*6
alias fullscreen ${sox};${soy} ${ssx};${ssy}
alias onLeft ${sox};${soy} ${ssx}/2;${ssy}
alias bottomHalf ${sox};${soy}+${ssy}/2 ${ssx};${ssy}/2
alias topHalf ${sox};${soy} ${ssx};2*${ssy}/2
alias onRight ${sox}+${ssx}-${ssx}/2;${soy} ${ssx}/2;${ssy}

# Bindings
bind c:cmd;ctrl move ${centered}
bind m:cmd;ctrl move ${fullscreen}
bind h:cmd;ctrl move ${onLeft}
bind j:cmd;ctrl move ${bottomHalf}
bind k:cmd;ctrl move ${topHalf}
bind l:cmd;ctrl move ${onRight}

bind ;:cmd;ctrl throw previous

bind l:ctrl;shift resize +10% +0
bind h:ctrl;shift resize -10% +0
bind j:ctrl;shift resize +0 -10%
bind k:ctrl;shift resize +0 +10%

bind l:ctrl;alt nudge +10% +0
bind h:ctrl;alt nudge -10% +0
bind j:ctrl;alt nudge +0 -10%
bind k:ctrl;alt nudge +0 +10%
